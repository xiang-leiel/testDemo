<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <appender name="debugFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        　　　　　　
        <file>./logs/zhaoshang-app2-debug.log</file>
        　　　　　　
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            　　　　　　　　　　
            <fileNamePattern>tests.%i.log.zip</fileNamePattern>
            　　　　　　　　　　
            <minIndex>1</minIndex>
            　　　　　　　　　　
            <maxIndex>10</maxIndex>
            　　　　　　
        </rollingPolicy>

        　　　　　　
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            　　　　　　　　　　
            <maxFileSize>500MB</maxFileSize>
            　　　　　　
        </triggeringPolicy>
        　　　　　　
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n
            </pattern>
        </encoder>
        　　
    </appender>
    <appender name="errorFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        　　　　　　
        <file>./logs/zhaoshang-app2-error.log</file>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        　　　　　　
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            　　　　　　　　　　
            <fileNamePattern>tests.%i.log.zip</fileNamePattern>
            　　　　　　　　　　
            <minIndex>1</minIndex>
            　　　　　　　　　　
            <maxIndex>10</maxIndex>
            　　　　　　
        </rollingPolicy>

        　　　　　　
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            　　　　　　　　　　
            <maxFileSize>500MB</maxFileSize>
            　　　　　　
        </triggeringPolicy>
        　　　　　　
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n
            </pattern>
        </encoder>
        　　
    </appender>
    <appender name="warnFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        　　　　　　
        <file>./logs/zhaoshang-app2-warn.log</file>
        　　　　　　
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            　　　　　　　　　　
            <fileNamePattern>tests.%i.log.zip</fileNamePattern>
            　　　　　　　　　　
            <minIndex>1</minIndex>
            　　　　　　　　　　
            <maxIndex>10</maxIndex>
            　　　　　　
        </rollingPolicy>

        　　　　　　
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            　　　　　　　　　　
            <maxFileSize>500MB</maxFileSize>
            　　　　　　
        </triggeringPolicy>
        　　　　　　
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n
            </pattern>
        </encoder>
        　　
    </appender>
    <logger name="dao" level="DEBUG">
        <appender-ref ref="debugFile" />
    </logger>
    <logger name="com.quantchi.tianji" level="DEBUG">
        <appender-ref ref="debugFile"/>
        <appender-ref ref="errorFile"/>
    </logger>
    <logger name="com.quantchi.tianji.service.search.dao" level="DEBUG" additivity="false">
        <appender-ref ref="debugFile"/>
    </logger>
    <logger name="com.ibatis" level="DEBUG">
        <appender-ref ref="debugFile"/>
    </logger>
    <logger name="com.ibatis.common.jdbc.SimpleDataSource" level="DEBUG">
        <appender-ref ref="debugFile"/>
    </logger>
    <logger name="com.ibatis.common.jdbc.ScriptRunner" level="DEBUG">
        <appender-ref ref="debugFile"/>
    </logger>
    <logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="DEBUG">
        <appender-ref ref="debugFile"/>
    </logger>
    <logger name="java.sql.Connection" level="DEBUG">
        <appender-ref ref="debugFile"/>
    </logger>
    <logger name="java.sql.Statement" level="DEBUG">
        <appender-ref ref="debugFile"/>
    </logger>
    <logger name="java.sql.PreparedStatement" level="DEBUG">
        <appender-ref ref="debugFile"/>
    </logger>
    <logger name="org.springframework" level="ERROR">
        <appender-ref ref="errorFile"/>
    </logger>
    <logger name="com.netflix" level="ERROR">
        <appender-ref ref="errorFile"/>
    </logger>
    <logger name="org.apache" level="ERROR">
        <appender-ref ref="errorFile"/>
    </logger>
    <logger name="org.mongodb.driver.connection" level="ERROR">
        <appender-ref ref="errorFile"/>
    </logger>
    <logger name="org.mongodb.driver.cluster" level="ERROR">
        <appender-ref ref="errorFile"/>
    </logger>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>