<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quantchi.tianji.service.search.dao.CatalogDao">
  <resultMap id="BaseResultMap" type="com.quantchi.tianji.service.search.model.LeftTreeNode">
    <id column="id" jdbcType="VARCHAR" property="id" />
    <result column="pid" jdbcType="VARCHAR" property="parentId" />
    <result column="name" jdbcType="VARCHAR" property="name" />
  </resultMap>
  <sql id="Base_Column_List">
    id, pid, name
  </sql>
    <select id="getOne" parameterType="com.quantchi.tianji.service.search.model.LeftTreeNode" resultMap="BaseResultMap" >
        select
        <include refid="Base_Column_List" />
        from ${field + '_catalog'}
        <where>
            isdel = 0
            <if test = "id != null and id != '' ">
                and id = #{id}
            </if>
            <if test = "parentId != null">
                and pid = #{parentId}
            </if>
            <if test = "name != null and name != '' ">
                and name = #{name}
            </if>
        </where>
    </select>
    <select id="getList" parameterType="com.quantchi.tianji.service.search.model.LeftTreeNode" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from  ${field + '_catalog'}
        <where>
            isdel = 0
            <if test = "id != null and id != '' ">
                and id = #{id}
            </if>
            <if test = "parentId != null and parentId != '' ">
                and pid = #{parentId}
            </if>
            <if test = "name != null and name != '' ">
                and name = #{name}
            </if>
        </where>
    </select>
</mapper>