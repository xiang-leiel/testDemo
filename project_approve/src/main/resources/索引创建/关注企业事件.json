//PUT /deqing_event4app
{
  "settings": {
    "refresh_interval": "20s"
  },
  "mappings": {
    "event": {
      "properties": {
        "title": {
          "type": "string",
          "analyzer": "ik"
        },
        "content": {
          "type": "string",
          "analyzer": "ik"
        },
        "publishTime": {
          "type": "date",
          "format": "yyyy-MM-dd"
        },
        "eventType": {
          "type": "string",
          "index": "not_analyzed"
        },
        "companyId": {
          "type": "string",
          "index": "not_analyzed"
        }
      }
    }
  }
}